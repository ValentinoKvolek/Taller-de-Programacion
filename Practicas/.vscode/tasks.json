{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
                "TASK_COMPILE": "C:\\FPC\\3.2.2\\bin\\i386-win32\\fpc.exe ${file} -o${fileDirname}\\compiled\\${fileBasenameNoExtension}.exe",
                "TASK_RUN": "${fileDirname}\\compiled\\${fileBasenameNoExtension}.exe",
            }
    },
    "tasks": [
      {
         "label": "PascalCompileNRun",
         "type": "shell",
         "dependsOrder": "sequence",
         "dependsOn": [
            "PascalCompile",
            "PascalRun"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher": []
      },
      
      {
         "label": "PascalMkdir",
         "type": "shell",
         "command": "mkdir",
         "args": ["${fileDirname}\\compiled"],
         "presentation": {
            "reveal": "always",
            "panel": "new"
         },
         "problemMatcher": "$go",
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "PascalCompile",
         "type": "shell",
         "command": "C:\\FPC\\3.2.2\\bin\\i386-win32\\fpc.exe",
         "presentation": {
            "reveal": "always",
            "panel": "new"
         },
         "args": [
            {
               "value": "${file}",
               "quoting": "escape"
            },
            {
               "value": "-o${fileDirname}\\compiled\\${fileBasenameNoExtension}.exe",
               "quoting": "escape"
            }
         ],
         "problemMatcher": {
            "owner": "external",
            "pattern": {
               "regexp": "^([\\w]+\\.(p|pp|pas))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
               "file": 1,
               "line": 3,
               "column": 4,
               "message": 6
            }
         },
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "PascalRun",
         "type": "shell",
         "command": "${fileDirname}\\compiled\\${fileBasenameNoExtension}.exe",
         "presentation": {
            "reveal": "always",
            "panel": "new"
         },
         "problemMatcher": {
            "owner": "external",
            "pattern": {
               "regexp": "^([\\w]+\\.(p|pp|pas))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
               "file": 1,
               "line": 3,
               "column": 4,
               "message": 6
            }
         },
         "group": {
            "kind": "build",
            "isDefault": true
         }
      }
   ]
}